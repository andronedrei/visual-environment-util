{
  "layer": "bottom",
  "position": "top",
  "height": 35,
  "margin": "8 8 0 8",
  "name": "dark-transparent",
  "mode": "dock",

  "modules-left": [
    "image#arch_menu",
    "custom/app_launcher",
    "custom/script_launcher",
	  "hyprland/workspaces",
    "custom/cpu_icon",
    "cpu",
    "memory",
    "custom/mem_icon"
  ],

  "modules-center": [],

  "modules-right": [
    "network",
    "battery",
    "custom/monitor",
    "custom/audio_icon",
    "pulseaudio",
    "clock",
    "custom/power"
  ],

  "image#arch_menu": {
    "path": "/home/andrei/.config/waybar/icons/arch_menu.png",
    "size": 30,
    "on-click": "rofi -show drun",
    "interval": -1
  },

  "custom/app_launcher": {
    "exec": "echo 'Apps'",
    "interval": -1,
    "on-click": "rofi -show drun",
    "tooltip": false
  },

  "custom/script_launcher": {
    "exec": "echo 'Scripts'",
    "interval": -1,
    "on-click": "/home/andrei/.veu-toolbox/run-computer-script.sh",
    "tooltip": false
  },

  "custom/cpu_icon": {
    "format":"  ",
    "tooltip": false,
    "interval": -1
  },

  "custom/mem_icon": {
    "format":"  ",
    "tooltip": false,
    "interval": -1
  },
 
  "network": {
    "format-disconnected": "‚ùå No Network",
    "format-wifi": "·Ø§ {essid} ‚Üë{bandwidthUpBits} ‚Üì{bandwidthDownBits}",
    "format-ethernet": "üñß {ifname} ‚Üë{bandwidthUpBits} ‚Üì{bandwidthDownBits}",
    "tooltip-format": "{ifname} - {ipaddr}",
    "max-length": 27,
    "min-length": 27,
    "interval": 3,
    "tooltip": false
  },

  "battery": {
    "bat": "BAT2",
    "interval": 60,
    "states": {
        "warning": 30,
        "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
    "max-length": 25,
    "tooltip": false
  },

  "custom/monitor": { 
    "format":" ",
    "on-click": "/home/andrei/.config/waybar/scripts/monitor-settings.sh",
    "tooltip": false,
    "interval": -1
  },

  "custom/audio_icon": {
    "format":"  ",
    "tooltip": false,
    "interval": -1
  },

  "pulseaudio": {
    "format": "{volume}%",
    "on-click": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
    "on-click-right": "pactl set-sink-volume @DEFAULT_SINK@ -5%",
    "tooltip": false
  },

  "clock": {
    "interval": 60,
    "format": "{:%H:%M}",
    "length": 25,
    "tooltip": false
  },

  "custom/power": {
    "exec": "echo '‚èª'",
    "format": " {} ",
    "on-click": "/home/andrei/.config/waybar/scripts/exit.sh",
    "interval": -1,
    "tooltip": false
  }
}
