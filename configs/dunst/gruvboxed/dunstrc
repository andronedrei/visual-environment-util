# minimal warm gruvboxed dark palette, rounded corners, consistent spacing

[global]
# placement and sizing
follow = mouse
width = 360
height = (0, 300)
origin = top-right
offset = (35, 35)
gap_size = 12
padding = 12
horizontal_padding = 20
notification_limit = 5
indicate_hidden = yes
sort = no

# frame and shape
frame_width = 2
frame_color = "#504945"           # soft dark border
corner_radius = 10                # window rounding

# progress bar
progress_bar = true
progress_bar_height = 8
progress_bar_min_width = 150
progress_bar_max_width = 300
progress_bar_frame_width = 0
progress_bar_corner_radius = 3
progress_bar_corners = all

# text and markup
font = Noto Sans 12
foreground = "#ebdbb2"            # readable light fg
markup = full
format = "<small>%a</small>\n<b>%s</b>\n%b"
alignment = left
vertical_alignment = center
show_age_threshold = -1
hide_duplicate_count = false

# icons
icon_position = left
min_icon_size = 54
max_icon_size = 80
icon_corner_radius = 4
icon_corners = all
icon_path = /usr/share/icons/hicolor/256x256/status:/usr/share/pixmaps

# actions and menu
dmenu = wofi --show drun --prompt 'open with'

# mouse
mouse_left_click = close_current
mouse_middle_click = do_action, close_current
mouse_right_click = close_all

# highlight/accent used by formats and rules
highlight = "#fabd2f"             # soft amber
highlight_translucent = "#fabd2fcc"

[urgency_low]
background = "#3c3836f0"          # subtle dark + alpha
frame_color = "#504945"
timeout = 3

[urgency_normal]
background = "#282828f0"          # darker + alpha
frame_color = "#665c54"
timeout = 8

[urgency_critical]
background = "#cc241df0"          # red + alpha for critical
frame_color = "#fb4934"
highlight = "#fb4934"
timeout = 0

# fullscreen behavior
[fullscreen_delay_everything]
fullscreen = delay

[fullscreen_show_critical]
msg_urgency = critical
fullscreen = show
